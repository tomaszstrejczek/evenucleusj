<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryDark</item>
        <item name="android:textColorSecondary">@color/darkpurple</item>
    </style>

    <style name="PilotText">
        <item name="android:textColor">@color/darkbl</item>
    </style>

    <style name="PilotWarning">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="FrequencyBox">
        <item name="android:textColor">@color/skylight</item>
        <item name="android:background">@drawable/background_frequency</item>
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FrequencyBoxSelected" parent="FrequencyBox">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:background">@drawable/background_frequency_selected</item>
    </style>

</resources>
